<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Registro de Estudiantes</title>
    <!-- Agrega el enlace al archivo CSS -->
    <link rel="stylesheet" type="text/css" href="/estiloformulario.css">

</head>
<body>
    <h1>Registro de Estudiantes</h1>
    
    <!-- Formulario de registro de estudiantes -->
    <form method="POST" action="/estudiantes">
        <label for="nombre">Nombre:</label>
        <input type="text" id="nombre" name="nombre" required>
        <label for="edad">Edad:</label>
        <input type="number" id="edad" name="edad" required>
        <label for="curso">Curso:</label>
        <input type="text" id="curso" name="curso" required>
        <button type="submit">Crear</button>
    </form>
    
    <!-- Lista de estudiantes -->
    <ul>
        <% estudiantes.forEach(function(estudiante) { %>
            <li>
                <strong><%= estudiante.nombre %></strong> (Edad: <%= estudiante.edad %>, Curso: <%= estudiante.curso %>)
                <a href="/estudiantes/edit/<%= estudiante.id %>">Editar</a>
                <a href="/estudiantes/delete/<%= estudiante.id %>">Eliminar</a>
            </li>
        <% }); %>
    </ul>
</body>
</html>
